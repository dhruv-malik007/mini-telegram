<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter code to open"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/dial_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dial: 123456"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="Code (e.g. 123456)"
            android:maxLength="10"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/edit_pin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberPassword"
            android:hint="PIN"
            android:maxLength="8"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Open" />

        <TextView
            android:id="@+id/setup_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIN not set. Open the app to set your PIN in Settings."
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btn_setup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Open app to set PIN"
            android:visibility="gone"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
