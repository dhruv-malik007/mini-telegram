    "dotenv": "^17.3.1",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "wait-on": "^9.0.4"
  }
}
